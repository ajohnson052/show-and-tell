  <div class='sub-container user-container'>
    <div class='avatar'>
      <%= image_tag "https://robohash.org/#{@user.role}#{@user.middle_name}.png", class: 'robot' %>
    </div>
    <div class='row edit-row'>
      <%= simple_form_for @user, :url => {:action => 'save_me' } do |f| %>
        <%= f.hidden_field :id %>
        <%= f.input :first_name %>
        <%= f.input :middle_name %>
        <%= f.input :last_name %>
        <%= f.input :role %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>